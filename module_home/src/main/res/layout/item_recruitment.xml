<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d55"
    android:background="@drawable/ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/d16"
        android:paddingTop="@dimen/d10"
        android:paddingEnd="@dimen/d16"
        android:paddingBottom="@dimen/d10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/d3"
                android:layout_height="@dimen/d10"
                android:background="@color/gold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d10"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/font8" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_time"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/font8" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/font8" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="@dimen/d45"
        android:text="置顶"
        android:id="@+id/tv_top"
        android:textSize="@dimen/font12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/d16"
        android:background="@color/color_FF8C00"
        android:layout_height="@dimen/d20" />
</RelativeLayout>
