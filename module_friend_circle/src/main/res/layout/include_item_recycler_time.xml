<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:text="10分钟前"
        android:id="@+id/txt_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_666666"
        android:layout_centerVertical="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:text="删除"
        android:textColor="@color/color_FF8C00"
        android:layout_toEndOf="@id/txt_publish_time"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/img_click_praise_or_comment"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/comments_drawable_blue" />

    <ImageView
        android:layout_width="@dimen/d22"
        android:src="@mipmap/dz"
        android:id="@+id/iv_praise"
        android:layout_marginEnd="@dimen/d40"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/d19"
        android:layout_toStartOf="@id/img_click_praise_or_comment"/>
</RelativeLayout>