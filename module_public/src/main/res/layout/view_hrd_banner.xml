<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d6"
    android:id="@+id/share_view1"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:background="@mipmap/default_image"
        android:layout_height="@dimen/d200"
        app:canLoop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d20"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hrd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d16"
            android:text="保利堂悦"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/font15" />

        <TextView
            android:id="@+id/tv_hrd_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d10"
            android:text="开盘：2019-08-11"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/font12" />

        <TextView
            android:id="@+id/tv_hrd_inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d16"
            android:gravity="right"
            android:text="举报"
            android:textColor="@color/color_FF8C00"
            android:textSize="@dimen/font10" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_hrd_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d16"
        android:layout_marginTop="@dimen/d10"
        android:text="均价    50000元/m"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />

    <TextView
        android:id="@+id/tv_hrd_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d16"
        android:layout_marginTop="@dimen/d10"
        android:drawableRight="@mipmap/dinwei"
        android:drawablePadding="@dimen/d5"
        android:text="地址"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />

    <TextView
        android:id="@+id/tv_hrd_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d16"
        android:layout_marginTop="@dimen/d10"
        android:text="开发商"
        android:layout_marginBottom="@dimen/d15"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />
</LinearLayout>