<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.techangkeji.module.ui.view_model.HRDetailViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d44">

            <com.goldze.base.view.TitleVIew
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d44" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@{viewModel.listingName}"
                android:textColor="@color/color_111212"
                android:textSize="@dimen/font18"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/d50"
                android:background="@color/white"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/tv_hr_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font15" />
        </RelativeLayout>

    </LinearLayout>
</layout>
