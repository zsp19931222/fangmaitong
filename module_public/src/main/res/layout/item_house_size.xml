<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/d16"
    android:paddingTop="@dimen/d10"
    android:paddingEnd="@dimen/d16"
    android:paddingBottom="@dimen/d10">

    <ImageView
        android:id="@+id/iv_hs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3室2厅1厨1卫"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/font12" />

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:layout_width="@dimen/d50"
            android:layout_height="@dimen/d15"
            android:layout_marginStart="@dimen/d20"
            android:gravity="center"
            android:id="@+id/tv_hs_price"
            android:text="售价待定"
            android:textColor="@color/color_FF8C00"
            android:textSize="@dimen/font10"
            app:rv_strokeColor="@color/color_FF8C00"
            app:rv_strokeWidth="@dimen/d1" />
    </LinearLayout>
</LinearLayout>