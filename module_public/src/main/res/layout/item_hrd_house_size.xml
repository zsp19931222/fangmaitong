<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d2"
    android:layout_marginEnd="@dimen/d2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d90">

        <me.goldze.mvvmhabit.view.shape.RadiusImageView
            android:id="@+id/iv_hhs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rv_corner_radius="@dimen/d3"
            />

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_hhs_type"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d20"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="保利堂悦B1户型"
            android:textColor="@color/white"
            android:textSize="@dimen/font10"
            app:rv_backgroundColor="#000000"
            app:rv_bottomLeftRadius="@dimen/d3"
            app:rv_bottomRightRadius="@dimen/d3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_hhs_structure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d6"
        android:layout_marginTop="@dimen/d5"
        android:layout_marginEnd="@dimen/d6"
        android:text="1室3厅2卫1厨"
        android:textColor="@color/color_gray_666666"
        android:textSize="@dimen/font10" />

    <TextView
        android:id="@+id/tv_hhs_acreage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d6"
        android:layout_marginTop="@dimen/d5"
        android:layout_marginEnd="@dimen/d6"
        android:text="套内130m"
        android:textColor="@color/color_gray_666666"
        android:textSize="@dimen/font10" />
</LinearLayout>