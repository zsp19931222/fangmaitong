<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d16"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hc_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:id="@+id/tv_hc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d5"
                    android:textColor="@color/color_FF8C00"
                    android:textSize="@dimen/font12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_hc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d5"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/d12"
                android:layout_height="@dimen/d12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d5"
                android:text="支持（36）"
                android:visibility="gone"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/font10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hc_start1"
            android:layout_width="@dimen/d13"
            android:layout_height="@dimen/d13" />

        <ImageView
            android:id="@+id/iv_hc_start2"
            android:layout_width="@dimen/d13"
            android:layout_height="@dimen/d13"
            android:layout_marginStart="@dimen/d5" />

        <ImageView
            android:id="@+id/iv_hc_start3"

            android:layout_width="@dimen/d13"
            android:layout_height="@dimen/d13"
            android:layout_marginStart="@dimen/d5" />

        <ImageView
            android:id="@+id/iv_hc_start4"

            android:layout_width="@dimen/d13"
            android:layout_height="@dimen/d13"
            android:layout_marginStart="@dimen/d5" />

        <ImageView
            android:id="@+id/iv_hc_start5"
            android:layout_width="@dimen/d13"
            android:layout_height="@dimen/d13"
            android:layout_marginStart="@dimen/d5" />

        <TextView
            android:id="@+id/tv_hc_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d20"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/font12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hc_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />
</LinearLayout>