<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="me.goldze.mvvmhabit.base.BaseViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.goldze.base.view.TitleVIew
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d44" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/d16"
                    android:paddingTop="@dimen/d10"
                    android:paddingEnd="@dimen/d16"
                    android:paddingBottom="@dimen/d10">

                    <ImageView
                        android:layout_width="@dimen/d70"
                        android:layout_height="@dimen/d70" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="林某某"
                            android:textColor="@color/color_dark_333333"
                            android:textSize="@dimen/font12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账号：5022332"
                            android:textColor="@color/color_dark_333333"
                            android:textSize="@dimen/font12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总代"
                            android:textColor="@color/color_dark_333333"
                            android:textSize="@dimen/font12" />

                        <me.goldze.mvvmhabit.view.shape.RadiusTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d5"
                            android:text="资质认证"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font10"
                            app:rv_backgroundColor="@color/color_FF8C00"
                            app:rv_radius="@dimen/d3" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/ViewLineStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d16"
                    android:text="求职标题"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/font15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d30"
                    android:layout_marginStart="@dimen/d16"
                    android:layout_marginEnd="@dimen/d16"
                    android:background="@color/color_f6"
                    android:gravity="center"
                    android:text="求职基础信息"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/font12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d30"
                    android:layout_marginStart="@dimen/d16"
                    android:layout_marginTop="@dimen/d1"
                    android:layout_marginEnd="@dimen/d16"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_f6"
                        android:gravity="center"
                        android:text="工作年限"
                        android:textColor="@color/color_dark_333333"
                        android:textSize="@dimen/font12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/d1"
                        android:layout_weight="2"
                        android:background="@color/color_f6"
                        android:gravity="center"
                        android:text="代理"
                        android:textColor="@color/color_dark_333333"
                        android:textSize="@dimen/font12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d30"
                    android:layout_marginStart="@dimen/d16"
                    android:layout_marginTop="@dimen/d1"
                    android:layout_marginEnd="@dimen/d16"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_f6"
                        android:gravity="center"
                        android:text="工作地址"
                        android:textColor="@color/color_dark_333333"
                        android:textSize="@dimen/font12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/d1"
                        android:layout_weight="2"
                        android:background="@color/color_f6"
                        android:gravity="center"
                        android:text="面议"
                        android:textColor="@color/color_dark_333333"
                        android:textSize="@dimen/font12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d30"
                    android:layout_marginStart="@dimen/d16"
                    android:layout_marginTop="@dimen/d1"
                    android:layout_marginEnd="@dimen/d16"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_f6"
                        android:gravity="center"
                        android:text="工作性质"
                        android:textColor="@color/color_dark_333333"
                        android:textSize="@dimen/font12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/d1"
                        android:layout_weight="2"
                        android:background="@color/color_f6"
                        android:gravity="center"
                        android:text="代理"
                        android:textColor="@color/color_dark_333333"
                        android:textSize="@dimen/font12" />
                </LinearLayout>

                <View
                    style="@style/ViewLineStyle5dp"
                    android:layout_marginTop="@dimen/d16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/d16"
                    android:text="个人简介"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/font15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/d16"
                    android:layout_marginEnd="@dimen/d16"
                    android:text="深圳瑞宝电脑技术服务有限公司，成立于2008年，我公司为各行各业提供专业的it技术服务，经过3年多的努力与发展，已具一定的规模及实力，现拥有一支技术精湛的it服务团队，以卓越的服务品质、专业安全的技术服务实力，为不同群体的用户提供更高更优质的it服务。"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/font12" />

                <View
                    style="@style/ViewLineStyle5dp"
                    android:layout_marginTop="@dimen/d16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/d16"
                    android:text="招聘联系"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/font15" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
