<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:paddingStart="@dimen/d16"
        android:paddingTop="@dimen/d10"
        android:paddingEnd="@dimen/d16"
        android:paddingBottom="@dimen/d10">

        <RelativeLayout
            android:layout_width="@dimen/d67"
            android:layout_height="@dimen/d50">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/d10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="123"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="123"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/font12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/d5"
                    android:gravity="center_vertical"
                    android:text="1小时前"
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/font10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d30"
                    android:drawableStart="@mipmap/eye_icon"
                    android:drawablePadding="@dimen/d5"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/font10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
