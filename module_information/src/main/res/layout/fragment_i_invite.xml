<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="me.goldze.mvvmhabit.base.BaseViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d90"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/zpxx"
                android:drawablePadding="@dimen/d5"
                android:gravity="center"
                android:text="招聘信息"
                android:textColor="@color/color_dark_333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/qzxx"
                android:drawablePadding="@dimen/d5"
                android:gravity="center"
                android:text="求职信息"
                android:textColor="@color/color_dark_333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/d5"
                android:gravity="center"
                android:textColor="@color/color_dark_333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/d5"
                android:gravity="center"
                android:textColor="@color/color_dark_333333" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d35"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="排序"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />

            <View
                android:layout_width="@dimen/d1"
                android:layout_height="@dimen/d25"
                android:background="@color/color_bfbfbf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="薪资范围"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />

            <View
                android:layout_width="@dimen/d1"
                android:layout_height="@dimen/d25"
                android:background="@color/color_bfbfbf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="工作性质"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />

            <View
                android:layout_width="@dimen/d1"
                android:layout_height="@dimen/d25"
                android:background="@color/color_bfbfbf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="排序"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />
        </LinearLayout>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:id="@+id/srl"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
</layout>
