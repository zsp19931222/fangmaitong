<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/am_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d44"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/title_left_rv"
        android:layout_width="@dimen/d44"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="@dimen/d16"
            android:layout_height="@dimen/d16"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d18"
            android:src="@mipmap/return_icon" />

    </RelativeLayout>


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/color_111212"
        android:textSize="@dimen/font18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/d16"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font15" />
</RelativeLayout>