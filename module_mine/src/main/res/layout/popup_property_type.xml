<?xml version="1.0" encoding="utf-8"?>
<me.goldze.mvvmhabit.view.shape.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/d150"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/d16"
    app:rv_backgroundColor="@color/white"
    app:rv_radius="@dimen/d5">

    <TextView
        android:id="@+id/tv_pt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="住宅"
        android:textColor="@color/color_gray_666666"
        android:textSize="@dimen/font14" />

    <View
        android:id="@+id/v_pt1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginTop="@dimen/d8"
        android:background="@color/color_FF8C00"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_pt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d12"
        android:text="别墅个"
        android:textColor="@color/color_gray_666666"
        android:textSize="@dimen/font14" />

    <View
        android:id="@+id/v_pt2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginTop="@dimen/d8"

        android:background="@color/color_FF8C00"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_pt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d12"

        android:text="商办"
        android:textColor="@color/color_gray_666666"
        android:textSize="@dimen/font14" />

    <View
        android:id="@+id/v_pt3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginTop="@dimen/d8"
        android:background="@color/color_FF8C00"

        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_pt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d12"
        android:text="写字楼"
        android:textColor="@color/color_gray_666666"
        android:textSize="@dimen/font14" />

    <View
        android:id="@+id/v_pt4"
        android:layout_width="match_parent"

        android:layout_height="@dimen/d1"
        android:layout_marginTop="@dimen/d8"
        android:background="@color/color_FF8C00"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_pt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d12"
        android:text="商铺"
        android:textColor="@color/color_gray_666666"
        android:textSize="@dimen/font14" />

    <View
        android:id="@+id/v_pt5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"

        android:layout_marginTop="@dimen/d8"
        android:background="@color/color_FF8C00"
        android:visibility="invisible" />
</me.goldze.mvvmhabit.view.shape.RadiusLinearLayout>