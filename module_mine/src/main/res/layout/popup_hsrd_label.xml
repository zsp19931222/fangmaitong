<?xml version="1.0" encoding="utf-8"?>

<me.goldze.mvvmhabit.view.shape.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/d275"
    android:layout_height="@dimen/d175"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/d16"
    app:rv_backgroundColor="@color/white"
    app:rv_radius="@dimen/d5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="特殊标签"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d16"
        android:orientation="horizontal">

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_phl_car_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/d10"
            android:paddingTop="@dimen/d6"
            android:paddingEnd="@dimen/d10"
            android:paddingBottom="@dimen/d6"
            android:text="专车带看"
            android:textSize="@dimen/font12"
            app:rv_backgroundColor="@color/color_f6"
            app:rv_backgroundSelectedColor="#FFF8EF"

            app:rv_radius="@dimen/d13"
            app:rv_textColor="@color/color_gray_999999"
            app:rv_textSelectedColor="@color/color_FF8C00" />

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_phl_video_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d10"
            android:layout_marginEnd="@dimen/d10"
            android:paddingStart="@dimen/d10"
            android:paddingTop="@dimen/d6"
            android:paddingEnd="@dimen/d10"
            android:paddingBottom="@dimen/d6"
            android:text="视频看房"
            android:textSize="@dimen/font12"
            app:rv_backgroundColor="@color/color_f6"
            app:rv_backgroundSelectedColor="#FFF8EF"
            app:rv_radius="@dimen/d13"
            app:rv_textColor="@color/color_gray_999999"
            app:rv_textSelectedColor="@color/color_FF8C00" />

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_phl_solo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/d10"
            android:paddingTop="@dimen/d6"
            android:paddingEnd="@dimen/d10"
            android:paddingBottom="@dimen/d6"
            android:text="小户型"
            android:textSize="@dimen/font12"
            app:rv_backgroundColor="@color/color_f6"
            app:rv_backgroundSelectedColor="#FFF8EF"
            app:rv_radius="@dimen/d13"
            app:rv_textColor="@color/color_gray_999999"
            app:rv_textSelectedColor="@color/color_FF8C00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:orientation="horizontal">

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_phl_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/d10"
            android:paddingTop="@dimen/d6"
            android:paddingEnd="@dimen/d10"
            android:paddingBottom="@dimen/d6"
            android:text="现房"
            android:textSize="@dimen/font12"
            app:rv_backgroundColor="@color/color_f6"
            app:rv_backgroundSelectedColor="#FFF8EF"
            app:rv_radius="@dimen/d13"
            app:rv_textColor="@color/color_gray_999999"
            app:rv_textSelectedColor="@color/color_FF8C00" />

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_phl_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d10"
            android:layout_marginEnd="@dimen/d10"
            android:paddingStart="@dimen/d10"
            android:paddingTop="@dimen/d6"
            android:paddingEnd="@dimen/d10"
            android:paddingBottom="@dimen/d6"
            android:text="品牌开发商"
            android:textSize="@dimen/font12"
            app:rv_backgroundColor="@color/color_f6"
            app:rv_backgroundSelectedColor="#FFF8EF"
            app:rv_radius="@dimen/d13"
            app:rv_textColor="@color/color_gray_999999"
            app:rv_textSelectedColor="@color/color_FF8C00" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_phl_delete"
            android:layout_width="@dimen/d60"
            android:layout_height="@dimen/d25"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/font12"
            app:rv_backgroundColor="@color/color_f6"
            app:rv_radius="@dimen/d13" />

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_phl_select"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d25"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingStart="@dimen/d10"
            android:paddingEnd="@dimen/d10"
            android:text="使用选中标签"
            android:textColor="@color/color_FF8C00"
            android:textSize="@dimen/font12"
            app:rv_radius="@dimen/d13"
            app:rv_strokeColor="@color/color_FF8C00"
            app:rv_strokeWidth="@dimen/d1" />
    </RelativeLayout>
</me.goldze.mvvmhabit.view.shape.RadiusLinearLayout>