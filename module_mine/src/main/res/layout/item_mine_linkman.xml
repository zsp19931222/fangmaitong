<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d60"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="@dimen/d16"
    android:paddingEnd="@dimen/d16">

    <ImageView
        android:id="@+id/iv_il"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_marginStart="@dimen/d10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_il"
        android:drawablePadding="@dimen/d5"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font14" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/d8"
        android:layout_marginStart="@dimen/d10"
        android:layout_toEndOf="@id/iv_il"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />

    <me.goldze.mvvmhabit.view.shape.RadiusTextView
        android:id="@+id/tv_il_delete"
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d25"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/d16"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/color_gray_999999"
        android:textSize="@dimen/font12"
        app:rv_radius="@dimen/d13"
        app:rv_strokeColor="@color/color_gray_999999"
        app:rv_strokeWidth="@dimen/d1" />
</RelativeLayout>