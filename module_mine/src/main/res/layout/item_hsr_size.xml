<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/d16"
    android:paddingTop="@dimen/d10"
    android:paddingEnd="@dimen/d16"
    android:paddingBottom="@dimen/d10">

    <ImageView
        android:id="@+id/iv_hs"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hs_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0室0厅0厨0卫"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/font12" />

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_hs_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d15"
            android:layout_marginStart="@dimen/d20"
            android:gravity="center"
            android:text="售价待定"
            android:textColor="@color/color_FF3333"
            android:textSize="@dimen/font10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hs_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="建面0㎡"

        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_hs_compile"
            android:layout_width="@dimen/d60"
            android:layout_height="@dimen/d25"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/color_FF8C00"
            android:textSize="@dimen/font12"
            binding:rv_radius="@dimen/d13"
            binding:rv_strokeColor="@color/color_FF8C00"
            binding:rv_strokeWidth="@dimen/d1" />

        <me.goldze.mvvmhabit.view.shape.RadiusTextView
            android:id="@+id/tv_hs_delete"
            android:layout_width="@dimen/d60"
            android:layout_height="@dimen/d25"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/d73"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/font12"
            binding:rv_radius="@dimen/d13"
            binding:rv_strokeColor="@color/color_gray_999999"
            binding:rv_strokeWidth="@dimen/d1" />
    </RelativeLayout>
</LinearLayout>