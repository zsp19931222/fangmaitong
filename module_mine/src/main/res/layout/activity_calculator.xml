<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="me.goldze.mvvmhabit.base.BaseViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/d16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请您填写："
            android:textColor="@color/color_FF8C00"
            android:textSize="@dimen/font12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款类别："
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />

            <CheckBox
                android:layout_width="@dimen/d12"
                android:layout_marginStart="@dimen/d15"
                android:layout_height="@dimen/d12"
                android:button="@drawable/cb_bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商业贷款"
                android:layout_marginStart="@dimen/d5"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12"/>
            <CheckBox
                android:layout_width="@dimen/d12"
                android:layout_marginStart="@dimen/d15"
                android:layout_height="@dimen/d12"
                android:button="@drawable/cb_bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公积金贷款"
                android:layout_marginStart="@dimen/d5"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12"/>
            <CheckBox
                android:layout_width="@dimen/d12"
                android:layout_marginStart="@dimen/d15"
                android:layout_height="@dimen/d12"
                android:button="@drawable/cb_bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组合型贷款"
                android:layout_marginStart="@dimen/d5"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d32"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算方式："
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12" />
            <CheckBox
                android:layout_width="@dimen/d12"
                android:layout_marginStart="@dimen/d15"
                android:layout_height="@dimen/d12"
                android:button="@drawable/cb_bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组合型贷款"
                android:layout_marginStart="@dimen/d5"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font12"/>
        </LinearLayout>
    </LinearLayout>
</layout>
