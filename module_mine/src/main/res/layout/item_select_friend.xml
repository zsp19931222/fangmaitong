<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d60"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="@dimen/d16"
    android:paddingEnd="@dimen/d16">

    <ImageView
        android:id="@+id/iv_isf"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44" />

    <TextView
        android:id="@+id/tv_isf_name"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/d10"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_isf"
        android:drawablePadding="@dimen/d5"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font14" />

    <TextView
        android:id="@+id/tv_isf_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_isf_name"
        android:layout_marginTop="@dimen/d8"
        android:layout_toEndOf="@id/iv_isf"
        android:layout_marginStart="@dimen/d10"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />

    <CheckBox
        android:id="@+id/cb_isf"
        android:layout_width="@dimen/d22"
        android:layout_height="@dimen/d22"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/d10"
        android:button="@drawable/cb_bg"
        android:gravity="center" />
</RelativeLayout>
