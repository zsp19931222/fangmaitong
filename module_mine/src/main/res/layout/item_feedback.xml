<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d16">

        <TextView
            android:id="@+id/tv_if_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房源名称"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/font16" />

        <TextView
            android:id="@+id/tv_if_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="时间"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/font16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_if_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/d16"
        android:text="反馈内容"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font14" />

    <com.kcrason.highperformancefriendscircle.widgets.VerticalCommentWidget
        android:id="@+id/vertical_comment_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d16"
        android:background="@color/color_f2"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="4dp" />
</LinearLayout>