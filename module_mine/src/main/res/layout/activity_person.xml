<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.techangkeji.model_mine.ui.viewModel.PersonViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.goldze.base.view.TitleVIew
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d44" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/d15"
            android:paddingBottom="@dimen/d15"
            binding:onClickCommand="@{viewModel.choiceHeadImage}">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/d16"
                android:text="头像"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/font14" />

            <ImageView
                android:id="@+id/iv_ap"
                android:layout_width="@dimen/d38"
                android:layout_height="@dimen/d38"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d44" />

            <ImageView
                android:layout_width="@dimen/d17"
                android:layout_height="@dimen/d24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d16"
                android:src="@drawable/more_1x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            binding:onClickCommand="@{viewModel.changeNameCommand}"
            android:paddingTop="@dimen/d15"
            android:paddingBottom="@dimen/d15">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/d16"
                android:text="昵称"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/font14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d44"
                android:text="张大帅"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font14" />

            <ImageView
                android:layout_width="@dimen/d17"
                android:layout_height="@dimen/d24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d16"
                android:src="@drawable/more_1x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/d15"
            android:paddingBottom="@dimen/d15"
            binding:onClickCommand="@{viewModel.sexCommand}">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/d16"
                android:text="性别"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/font14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d44"
                android:text="@{viewModel.sexField}"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font14" />

            <ImageView
                android:layout_width="@dimen/d17"
                android:layout_height="@dimen/d24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d16"
                android:src="@drawable/more_1x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/d15"
            binding:onClickCommand="@{viewModel.changeAgeCommand}"
            android:paddingBottom="@dimen/d15">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/d16"
                android:text="年龄"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/font14"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d44"
                android:text="@{viewModel.ageField}"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font14" />

            <ImageView
                android:layout_width="@dimen/d17"
                android:layout_height="@dimen/d24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d16"
                android:src="@drawable/more_1x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/d15"
            android:paddingBottom="@dimen/d15">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/d16"
                android:text="注销账号"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/font14" />

            <ImageView
                android:layout_width="@dimen/d17"
                android:layout_height="@dimen/d24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d16"
                android:src="@drawable/more_1x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f6">

            <me.goldze.mvvmhabit.view.shape.RadiusTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/d16"
                android:layout_marginEnd="@dimen/d16"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/font16"
                binding:rv_backgroundColor="@color/color_FF8C00"
                binding:rv_radius="@dimen/d25" />
        </RelativeLayout>
    </LinearLayout>
</layout>