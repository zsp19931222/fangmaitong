<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="me.goldze.mvvmhabit.base.BaseViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d44">

            <com.goldze.base.view.TitleVIew
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d44" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d16"
                android:text="完成"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/font16" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/d16"
            android:paddingTop="@dimen/d18"
            android:background="@color/color_f6"
            android:paddingEnd="@dimen/d16"
            android:paddingBottom="@dimen/d18">

            <EditText
                android:id="@+id/et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="输入您的昵称"
                android:background="@null"
                android:textColorHint="@color/color_gray_666666"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/font14" />

            <ImageView
                android:layout_width="@dimen/d20"
                android:layout_height="@dimen/d20"
                android:layout_marginStart="@dimen/d16" />
        </LinearLayout>
    </LinearLayout>
</layout>