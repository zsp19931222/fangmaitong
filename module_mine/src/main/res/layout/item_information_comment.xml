<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/d16"
    android:paddingEnd="@dimen/d16"
    android:paddingBottom="@dimen/d16"
    >

    <ImageView
        android:id="@+id/iv_iic"
        android:layout_width="@dimen/d33"
        android:layout_height="@dimen/d33"
        android:layout_marginTop="@dimen/d18"
        android:layout_marginEnd="@dimen/d8"
        android:background="@color/color_dark_333333" />

    <TextView
        android:id="@+id/tv_iic_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d18"
        android:layout_toEndOf="@id/iv_iic"
        android:text="今夕是何年"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font14" />

    <TextView
        android:id="@+id/tv_iic_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_iic_user_name"
        android:layout_marginTop="@dimen/d8"
        android:layout_toEndOf="@id/iv_iic"
        android:text="2019-08-08"
        android:textColor="@color/color_gray_999999"
        android:textSize="@dimen/font12" />

    <TextView
        android:id="@+id/tv_iic_user_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_iic_user_time"
        android:layout_marginTop="@dimen/d15"
        android:layout_toEndOf="@id/iv_iic"
        android:text="采光好，通风好视野开阔，这套房子是一个三室一厅的好户型。"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />

    <TextView
        android:id="@+id/tv_iic_user_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/d18"
        android:text="删除"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/font12" />
</RelativeLayout>